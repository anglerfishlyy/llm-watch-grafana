# Copy to .env and fill in the keys before running docker compose

# Server Configuration
PORT=8080
HOST=0.0.0.0
CORS_ENABLED=true

# Provider API Keys
CEREBRAS_API_KEY=
OPENROUTER_API_KEY=
LLAMA_API_KEY=

# Provider API URLs (optional - defaults provided)
# CEREBRAS_API_URL=https://api.cerebras.ai/v1/chat/completions
# OPENROUTER_URL=https://openrouter.ai/api/v1/chat/completions
# LLAMA_API_URL=https://api.openrouter.ai/v1/chat/completions

# Provider Timeouts (milliseconds)
# CEREBRAS_TIMEOUT=30000
# OPENROUTER_TIMEOUT=30000
# LLAMA_TIMEOUT=30000

# Cost Configuration (per million tokens)
# CEREBRAS_COST_PER_MILLION=0.10
# OPENROUTER_COST_PER_MILLION=0.50
# LLAMA_COST_PER_MILLION=0.50

# MCP Gateway Configuration
MCP_GATEWAY_PORT=8081
# MCP_GATEWAY_URL=http://mcp-gateway:8081
# MCP_TIMEOUT=30000

# Metrics Configuration
# METRICS_MAX_SIZE=500
# DEMO_INTERVAL=3000

# Prometheus Configuration
# PROMETHEUS_ENABLED=true
# PROMETHEUS_ENDPOINT=/metrics